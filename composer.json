{
    "name": "icambridge/phony",
    "description": "A server to be used to mock HTTP requests",
    "minimum-stability": "alpha",
    "license": "MIT",
    "authors": [
        {
            "name": "Iain Cambridge",
            "email": "iain@iain.sexy"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "icambridge/http": "dev-master",
        "symfony/process": "2.5.*",
        "symfony/routing": "2.5.*",
        "guzzlehttp/guzzle": "~4.0"
    },
    "autoload": {
        "psr-4": {
            "Phony\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phony\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url":  "git@github.com:icambridge/react-http.git"
        }
    ]
}
